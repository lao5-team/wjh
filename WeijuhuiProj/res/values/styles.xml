</style>
    
 <style name="line_c8c8c8">
     <item name="android:layout_width">match_parent</item>
     <item name="android:height">10px</item>
     <item name="android:background">@color/color_c2c2c2</item>
 </style>

    <style name="AnimLeft" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/out_to_right</item>
    </style>
    <style name="CTActivityStyleLeftPush">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/AnimLeft</item>
    </style>

    <style name="BaseInput" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textColorHint">@color/color_dddddd</item>
        <item name="android:background">@color/color_ffffff</item>
        <item name="android:paddingLeft">@dimen/margin_10</item>
        <item name="android:paddingRight">@dimen/margin_10</item>
        <item name="android:layout_height">@dimen/view_item_height</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
    
    <style name="CTProgressBar">
        <item name="android:background">@drawable/icon_loading</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/bg_loading</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateBehavior">repeat</item>
    </style>

    <style name="line_h">
        <item name="android:background">@color/color_c8c8c8</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
    </style>

    <style name="TitleView">
        <item name="android:textSize">@dimen/font_size_36</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TipView">
        <item name="android:textSize">@dimen/font_size_26</item>
        <item name="android:textColor">@color/color_999999</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
 
    <style name="line_h_margin_left_10" parent="@style/line_h">
        <item name="android:layout_marginLeft">@dimen/margin_10</item>
    </style>
        
    <style name="NextButton">
        <item name="android:textSize">@dimen/font_size_26</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/margin_10</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">@dimen/view_item_height</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawableRight">@drawable/icon_right_arrow</item>
    </style>
        
    <style name="NextButtonWithBackground" parent="@style/NextButton">
        <item name="android:background">@drawable/selector_btn_4</item>
    </style>
    
   
   <style name="cabin_class_dialog" parent="@android:style/Theme.Holo.DialogWhenLarge">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="line_v">
        <item name="android:background">@color/color_c8c8c8</item>
        <item name="android:layout_width">1.0px</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

</resources>
