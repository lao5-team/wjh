<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/channel_navigation_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"    
    android:orientation="vertical" >



    <LinearLayout
        android:id="@+id/channel_navigation_top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/channel_navigation_my_orders"
            android:layout_width="match_parent"
            android:layout_height="@dimen/channel_navigation_item_height"
             >

            <ImageView
                android:id="@+id/channel_navigation_item_my_orders"
                android:layout_width="@dimen/channel_navigation_imageview_width"
                android:layout_height="@dimen/channel_navigation_imageview_width"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/channel_navigation_item_imageview_marginleft"
                android:background="@drawable/icon_my_orders"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/channel_navigation_item_my_orders_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/channel_navigator_name_marginleft"
                android:layout_toRightOf="@id/channel_navigation_item_my_orders"
                android:maxLines="1"
                android:maxWidth="@dimen/BookAbstract_Latest_TEXT_SIZEX"
                android:singleLine="true"
                android:text="@string/my_orders"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_medium" />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/channel_navigation_item_viewed_hotels"
            android:layout_width="match_parent"
            android:layout_height="@dimen/channel_navigation_item_height"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/channel_navigation_item_viewed_hotel_imageview"
                android:layout_width="@dimen/channel_navigation_imageview_width"
                android:layout_height="@dimen/channel_navigation_imageview_width"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/channel_navigation_item_imageview_marginleft"
                android:background="@drawable/icon_my_reviews"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/channel_navigation_item_flight_status_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/channel_navigator_name_marginleft"
                android:layout_toRightOf="@id/channel_navigation_item_viewed_hotel_imageview"
                android:maxLines="1"
                android:maxWidth="@dimen/BookAbstract_Latest_TEXT_SIZEX"
                android:singleLine="true"
                android:text="@string/viewed_hotels"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_medium" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/channel_navigation_item_flight_status"
            android:layout_width="match_parent"
            android:layout_height="@dimen/channel_navigation_item_height"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/channel_navigation_item_flight_status_imageview"
                android:layout_width="@dimen/channel_navigation_imageview_width"
                android:layout_height="@dimen/channel_navigation_imageview_width"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/channel_navigation_item_imageview_marginleft"
                android:background="@drawable/icon_my_dynamics"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/channel_navigation_item_flight_status_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/channel_navigator_name_marginleft"
                android:layout_toRightOf="@id/channel_navigation_item_flight_status_imageview"
                android:maxLines="1"
                android:maxWidth="@dimen/BookAbstract_Latest_TEXT_SIZEX"
                android:singleLine="true"
                android:text="@string/flight_status"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_medium" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/channel_navigation_item_search_history"
            android:layout_width="match_parent"
            android:layout_height="@dimen/channel_navigation_item_height"
            android:orientation="horizontal"

             >

            <ImageView
                android:id="@+id/channel_navigation_item_search_history_imageview"
                android:layout_width="@dimen/channel_navigation_imageview_width"
                android:layout_height="@dimen/channel_navigation_imageview_width"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/channel_navigation_item_imageview_marginleft"
                android:background="@drawable/icon_my_search"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/channel_navigation_item_search_history_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/channel_navigator_name_marginleft"
                android:layout_toRightOf="@+id/channel_navigation_item_search_history_imageview"
                android:maxLines="1"
                android:maxWidth="@dimen/BookAbstract_Latest_TEXT_SIZEX"
                android:singleLine="true"
                android:text="@string/search_history"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_medium" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/channel_navigation_item_settings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/channel_navigation_item_height"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/channel_navigation_item_settings_imageview"
                android:layout_width="@dimen/channel_navigation_imageview_width"
                android:layout_height="@dimen/channel_navigation_imageview_width"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/channel_navigation_item_imageview_marginleft"
                android:background="@drawable/icon_my_settings"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/channel_navigation_item_settings_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/channel_navigator_name_marginleft"
                android:layout_toRightOf="@+id/channel_navigation_item_settings_imageview"
                android:maxLines="1"
                android:maxWidth="@dimen/BookAbstract_Latest_TEXT_SIZEX"
                android:singleLine="true"
                android:text="@string/setting"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_medium" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/channel_navigation_item_feed_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/channel_navigation_item_height"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/channel_navigation_item_feed_back_imageview"
                android:layout_width="@dimen/channel_navigation_imageview_width"
                android:layout_height="@dimen/channel_navigation_imageview_width"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/channel_navigation_item_imageview_marginleft"
                android:background="@drawable/icon_my_feedback"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/channel_navigation_item_feed_back_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/channel_navigator_name_marginleft"
                android:layout_toRightOf="@+id/channel_navigation_item_feed_back_imageview"
                android:maxLines="1"
                android:maxWidth="@dimen/BookAbstract_Latest_TEXT_SIZEX"
                android:singleLine="true"
                android:text="@string/feed_back"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_medium" />
        </RelativeLayout>

     </LinearLayout>
</RelativeLayout>