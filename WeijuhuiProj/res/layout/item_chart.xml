<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >

    <CheckBox
        android:id="@+id/checkBox_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:text="" />

    <ImageView
        android:id="@+id/imageView_goods"
        android:layout_width="96dip"
        android:layout_height="96dip"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/checkBox_select"
        android:src="@drawable/add" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_goods"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView_goods" >

        <TextView
            android:id="@+id/textView_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="标题"
            android:textSize="@dimen/normal_font_size" />

        <TextView
            android:id="@+id/textView_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView_goods_name"
            android:text="价格"
            android:textSize="@dimen/normal_font_size" />

        <ImageButton
            android:id="@+id/imageButton_dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/sub" />

        <TextView
            android:id="@+id/textView_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imageButton_dec"
            android:layout_toEndOf="@+id/imageButton_dec"
            android:text="TextView" />

        <ImageButton
            android:id="@+id/imageButton_inc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textView_count"
            android:layout_toEndOf="@+id/textView_count"
            android:src="@drawable/add" />

    </RelativeLayout>

</RelativeLayout>
