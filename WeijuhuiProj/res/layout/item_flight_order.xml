<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bright_foreground_inverse_material_light" >

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textView_flight" android:textSize="@dimen/normal_font_size" android:layout_margin="5dip"
            android:textColor="@color/color_000000"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Depart"
            android:layout_below="@+id/textView_flight"
            android:id="@+id/textView_depart_label" android:layout_margin="5dp"
            android:textColor="@color/color_000000"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:layout_alignBaseline="@+id/textView_depart_label"
            android:layout_alignParentRight="false"
            android:textColor="@color/color_000000"
            android:id="@+id/textView_depart" android:layout_margin="5dp" android:layout_centerHorizontal="true"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/textView_depart_label"
            android:id="@+id/imageView_line" android:layout_marginBottom="5dp" android:src="@color/color_gray_9"
            android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
            android:textColor="@color/color_000000"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:layout_below="@+id/imageView_line"
            android:id="@+id/textView_state" android:layout_margin="5dp"
            android:textColor="@color/color_000000"/>
</RelativeLayout>