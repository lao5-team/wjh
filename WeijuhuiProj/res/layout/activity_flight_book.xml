<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_efefef"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_10" >

            <LinearLayout
                android:id="@+id/ll_airline_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:text="@string/airline_details"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_medium" />

                <View style="@style/line_h" />

                <LinearLayout
                    android:id="@+id/ll_airlines"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:text="@string/expend_per_person"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_medium" />

                <View style="@style/line_h" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_10" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_ffffff" >

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="@string/airfare"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/font_size_large" />

                        <TextView
                            android:id="@+id/tv_per_price_currency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/font_size_x_small" />

                        <TextView
                            android:id="@+id/tv_per_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_10"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/font_size_large" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_ffffff"
                        android:paddingTop="5.0dip" >

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="@string/taxes_and_fees"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/font_size_large" />

                        <TextView
                            android:id="@+id/tv_tax_currency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/font_size_x_small" />

                        <TextView
                            android:id="@+id/tv_tax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_10"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/font_size_large" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_flight_coupon_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_ffffff"
                        android:paddingTop="5.0dip"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/tv_flight_coupon_content"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="@string/CMONEY"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/font_size_large" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CNY"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/font_size_x_small" />

                        <TextView
                            android:id="@+id/tv_flight_coupon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_10"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/font_size_large" />
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/line_h_margin_left_10" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_yellow_1"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_10" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="@string/total_fare"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/font_size_large"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tv_total_currency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/font_size_x_small" />

                            <TextView
                                android:id="@+id/tv_total_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/margin_10"
                                android:textColor="@color/color_1484dc"
                                android:textSize="@dimen/font_size_x_large"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_amount_with_current_currency"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3.0dip"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:onClick="onClickExclamationMark" >

                        <TextView
                            android:id="@+id/tv_amount_with_current_currency"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:gravity="right"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/font_size_x_small" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5.0dip"
                            android:src="@drawable/icon_i" />
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/line_h" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:text="@string/name_requires"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_x_small" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/passenger"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_large" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:text="@string/adult_tickets_only"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/font_size_large" />

<!--                 <ImageButton
                    android:id="@+id/imageButton_addPassenger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add" /> -->
            </LinearLayout>

            <TextView
                android:id="@+id/tv_addPassenger"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/view_item_height"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/selector_btn_6"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:text="@string/choose_add_passenger"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_size_large" />

            <LinearLayout
                android:id="@+id/ll_guests_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/color_ffffff"
                android:orientation="vertical"
                android:visibility="visible" >

                <View style="@style/line_h" />

                <LinearLayout
                    android:id="@+id/ll_guests"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <View style="@style/line_h" />
            </LinearLayout>
            <!-- <ctrip.english.views.common.ContactView android:id="@+id/cv_contact" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_10" /> -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_10"
                android:text="@string/flight_book_note"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_medium" />

            <LinearLayout
                android:id="@+id/ll_taxes_not_include_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:visibility="gone" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="@string/taxes_not_include_title"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/font_size_medium" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2.0dip"
                    android:text="@string/taxes_not_include_content"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/font_size_medium" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/view_bottom_bar" />

</LinearLayout>