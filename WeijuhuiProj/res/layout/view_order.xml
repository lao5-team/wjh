<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/color_ffffff">

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_back" android:layout_margin="5dp" android:src="@drawable/btn_titlebar_back"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="My Flight Orders"
            android:layout_alignBottom="@+id/imageButton_back"
            android:id="@+id/textView4" android:layout_gravity="center_horizontal" android:layout_margin="5dp"
            android:gravity="center" android:textColor="@color/color_000000" android:layout_centerHorizontal="true"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView_flight_orders" android:layout_gravity="center_horizontal" android:layout_margin="5dp"
            android:layout_below="@+id/imageButton_back" android:divider="@android:color/holo_purple"
            android:dividerHeight="2dp"/>
</RelativeLayout>