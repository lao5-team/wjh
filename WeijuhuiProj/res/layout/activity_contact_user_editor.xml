<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:scrollbars="vertical">

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/contact_user_editor_view"
    android:background="@color/color_gray_12"
	 >
    
    <LinearLayout 
         android:id="@+id/layout_contact_user_info"
         android:layout_width="match_parent"
   		 android:layout_height="wrap_content"
    	 android:background="@color/color_gray_12"
    	 android:orientation="vertical"
  		>
    	<RelativeLayout 
            android:id="@+id/title_basic_info"
            android:clickable="true" 
            android:background="@color/color_gray_12"
            android:layout_width="fill_parent" 
            android:layout_height="@dimen/view_item_height">
           
           <TextView 
                android:textSize="@dimen/font_size_26" 
                android:textColor="@color/color_333333" 
                android:gravity="center_vertical" 
                android:id="@+id/tv_name_title" 
                android:paddingLeft="@dimen/margin_10" 
                android:layout_width="fill_parent" 
                android:layout_height="fill_parent" 
                android:text="@string/basic_info" />

        </RelativeLayout>
        
        <View 
            style="@style/line_h" />
    
   	   <RelativeLayout 
            android:id="@+id/layout_name" 
            android:background="@drawable/selector_btn_4" 
            android:clickable="true" 
            android:layout_width="fill_parent" 
            android:layout_height="@dimen/view_item_height">
           
           <EditText 
                android:textSize="@dimen/font_size_26" 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:singleLine="true"
                android:background="@color/white"
                android:textColor="@color/color_333333" 
                android:gravity="center_vertical" 
                android:id="@+id/edt_name" 
                android:paddingLeft="@dimen/margin_10" 
                android:hint="@string/name" />

        </RelativeLayout>
                     
        <View 
            android:layout_marginLeft="@dimen/margin_10"
            style="@style/line_h" />
        
           	   <RelativeLayout 
            android:id="@+id/layout_email" 
            android:background="@drawable/selector_btn_4" 
            android:clickable="true" 
            android:layout_width="fill_parent" 
            android:layout_height="@dimen/view_item_height">
           
           <EditText 
                android:textSize="@dimen/font_size_26" 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:singleLine="true"
                android:background="@color/white"
                android:textColor="@color/color_333333" 
                android:gravity="center_vertical" 
                android:id="@+id/edt_email" 
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/margin_10" 
                android:hint="@string/email" />

        </RelativeLayout>
                     
           <View 
            android:layout_marginLeft="@dimen/margin_10"
            style="@style/line_h" />
        
       <LinearLayout 
            android:id="@+id/layout_phonenumber" 
            android:background="@drawable/selector_btn_4" 
            android:orientation="horizontal"
            android:layout_width="fill_parent" 
            android:layout_height="@dimen/view_item_height">
           
       <LinearLayout
            android:id="@+id/layout_country_code"
            android:orientation="horizontal"
            android:layout_width="130dp"
            android:layout_height="fill_parent"
            android:background="@drawable/selector_btn_4"
            android:gravity="center_vertical"
            android:clickable="true" >

            <TextView
                android:id="@+id/tv_country_code"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_10"
                android:textColor="@color/color_333333"
                android:text="@string/country_code"
                android:textSize="@dimen/font_size_26" />

            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_right_arrow" />

        </LinearLayout>
        
                  <View 
            style="@style/line_v" />
           	
           <EditText 
                android:textSize="@dimen/font_size_26" 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:singleLine="true"
                android:background="@color/white"
                android:textColor="@color/color_333333" 
                android:gravity="center_vertical" 
                android:inputType="phone"
                android:id="@+id/edt_phone_number" 
                android:paddingLeft="@dimen/margin_10" 
                android:hint="@string/phone_number_hint" />

        </LinearLayout>
                     
        <View 
            style="@style/line_h" />
        
        
        <RelativeLayout 
            android:id="@+id/recipient_info" 
            android:clickable="true" 
            android:background="@color/color_gray_12"
            android:layout_width="fill_parent" 
            android:layout_height="@dimen/view_item_height">
           
           <TextView 
                android:textSize="@dimen/font_size_26" 
                android:textColor="@color/color_333333" 
                android:gravity="center_vertical" 
                android:id="@+id/tv_recipient_info" 
                android:paddingLeft="@dimen/margin_10" 
                android:layout_width="fill_parent" 
                android:layout_height="fill_parent" 
                android:text="@string/recipient_info" />

        </RelativeLayout>
        
        <View
            style="@style/line_h" />
        
        
         <RelativeLayout 
            android:id="@+id/layout_recipient" 
            android:background="@drawable/selector_btn_4" 
            android:clickable="true" 
            android:layout_width="fill_parent" 
            android:layout_height="@dimen/view_item_height">
           
           <EditText 
                android:textSize="@dimen/font_size_26" 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:singleLine="true"
                android:background="@color/white"
                android:textColor="@color/color_333333" 
                android:gravity="center_vertical" 
                android:id="@+id/edt_recipient" 
                android:paddingLeft="@dimen/margin_10" 
                android:hint="@string/recipient" />

        </RelativeLayout>
                
        <View android:layout_marginLeft="@dimen/margin_10" 
            style="@style/line_h" />
        
       <RelativeLayout
            android:id="@+id/layout_recipient_phone"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/view_item_height"
            android:background="@drawable/selector_btn_4"
            android:clickable="true" >

             <EditText 
                android:textSize="@dimen/font_size_26" 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:singleLine="true"
                android:background="@color/white"
                android:textColor="@color/color_333333" 
                android:gravity="center_vertical" 
                android:id="@+id/edt_recipient_phone" 
                android:inputType="phone"
                android:paddingLeft="@dimen/margin_10" 
                android:hint="@string/recipient_phone" />
        </RelativeLayout>
                
        <View android:layout_marginLeft="@dimen/margin_10" 
            style="@style/line_h" />
        
        <RelativeLayout
            android:id="@+id/layout_recipient_address"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/view_item_height"
            android:background="@drawable/selector_btn_4"
            android:clickable="true" >

        <EditText 
                android:textSize="@dimen/font_size_26" 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:singleLine="true"
                android:background="@color/white"
                android:textColor="@color/color_333333" 
                android:gravity="center_vertical" 
                android:id="@+id/edt_recipient_address" 
                android:paddingLeft="@dimen/margin_10" 
                android:hint="@string/recipient_address" />
        </RelativeLayout>
                <View android:layout_marginLeft="@dimen/margin_10" 
            style="@style/line_h" />
        
        <RelativeLayout
            android:id="@+id/layout__recipient_postal_code"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/view_item_height"
            android:background="@drawable/selector_btn_4"
            android:clickable="true" >

        <EditText 
                android:textSize="@dimen/font_size_26" 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:singleLine="true"
                android:background="@color/white"
                android:textColor="@color/color_333333" 
                android:gravity="center_vertical" 
                android:id="@+id/edt_recipient_postal_code" 
                android:paddingLeft="@dimen/margin_10" 
                android:hint="@string/recipient_postal_code" />
        </RelativeLayout>
        
        <View 
            style="@style/line_h" />
    
	</LinearLayout>
	        

        
    <RelativeLayout 
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/layout_contact_user_info"
        android:gravity="center_horizontal"
 		>
        <Button 
            android:id="@+id/btn_confirm"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/size_20dip"
            android:layout_width="@dimen/passengerlist_confirmbutton_width"
            android:layout_height="@dimen/passengerlist_confirmbutton_height"
            android:text="@string/done"
            android:background="@drawable/selector_btn_1"
            android:gravity="center"
            />
    </RelativeLayout>
    
    
    </RelativeLayout>
    

</ScrollView>
