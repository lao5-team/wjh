<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:scrollbars="vertical">

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/passenger_editor_view"
    android:background="@color/color_gray_12"
	 >
    
    <LinearLayout 
        android:id="@+id/layout_passenger_info"
         android:layout_width="match_parent"
   		 android:layout_height="wrap_content"
    	 android:background="@color/color_gray_12"
    	 android:orientation="vertical"
  		>
    	<RelativeLayout 
            android:id="@+id/title_name" 
            android:clickable="true" 
            android:background="@color/color_gray_12"
            android:layout_width="fill_parent" 
            android:layout_height="@dimen/view_item_height">
           
           <TextView 
                android:textSize="@dimen/font_size_26" 
                android:textColor="@color/color_333333" 
                android:gravity="center_vertical" 
                android:id="@+id/tv_language_title" 
                android:paddingLeft="@dimen/margin_10" 
                android:layout_width="fill_parent" 
                android:layout_height="fill_parent" 
                android:text="@string/name" />

        </RelativeLayout>
        
        <View 
            style="@style/line_h" />
    
   	   <RelativeLayout 
            android:id="@+id/layout_first_name" 
            android:background="@drawable/selector_btn_4" 
            android:clickable="true" 
            android:layout_width="fill_parent" 
            android:layout_height="@dimen/view_item_height">
           
           <EditText 
                android:textSize="@dimen/font_size_26" 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:singleLine="true"
                android:background="@color/white"
                android:textColor="@color/color_333333" 
                android:gravity="center_vertical" 
                android:id="@+id/edt_name" 
                android:paddingLeft="@dimen/margin_10" 
                android:hint="@string/name" />

        </RelativeLayout>
       
        <View 
            style="@style/line_h" />
        
           <RelativeLayout 
            android:id="@+id/title_passenger_id" 
            android:clickable="true" 
            android:background="@color/color_gray_12"
            android:layout_width="fill_parent" 
            android:layout_height="@dimen/view_item_height">
           
           <TextView 
                android:textSize="@dimen/font_size_26" 
                android:textColor="@color/color_333333" 
                android:gravity="center_vertical" 
                android:id="@+id/tv_passenger_id" 
                android:paddingLeft="@dimen/margin_10" 
                android:layout_width="fill_parent" 
                android:layout_height="fill_parent" 
                android:text="@string/ID" />

        </RelativeLayout>
        
                   
        <View
            style="@style/line_h" />
        
        
         <RelativeLayout 
            android:id="@+id/layout_ID_type" 
            android:background="@drawable/selector_btn_4" 
            android:clickable="true" 
            android:layout_width="fill_parent" 
            android:layout_height="@dimen/view_item_height">
           
           <TextView 
                android:textSize="@dimen/font_size_26" 
                android:textColor="@color/color_333333" 
                android:gravity="center_vertical" 
                android:id="@+id/tv_id_type" 
                android:paddingLeft="@dimen/margin_10" 
                android:layout_width="fill_parent" 
                android:layout_height="fill_parent" 
			/>
            
            <ImageView 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="@dimen/margin_10" 
                android:layout_marginRight="@dimen/margin_10" 
                android:src="@drawable/icon_right_arrow" 
                android:layout_alignParentRight="true" 
                android:layout_centerVertical="true" />

        </RelativeLayout>
        
                 <View android:layout_marginLeft="@dimen/margin_10" 
            style="@style/line_h" />
         
        <RelativeLayout 
            android:id="@+id/layout_id_number" 
            android:background="@drawable/selector_btn_4" 
            android:clickable="true" 
            android:layout_width="fill_parent" 
            android:layout_height="@dimen/view_item_height">
           
           <EditText 
                android:textSize="@dimen/font_size_26" 
                android:textColor="@color/color_333333"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:singleLine="true"
                android:background="@color/white" 
                android:gravity="center_vertical" 
                android:id="@+id/edt_id_number" 
                android:paddingLeft="@dimen/margin_10" 
                android:hint="@string/number" />

        </RelativeLayout>
        
                
        <View 
            style="@style/line_h" />
        
        
        <RelativeLayout 
            android:id="@+id/basic_info" 
            android:clickable="true" 
            android:background="@color/color_gray_12"
            android:layout_width="fill_parent" 
            android:layout_height="@dimen/view_item_height">
           
           <TextView 
                android:textSize="@dimen/font_size_26" 
                android:textColor="@color/color_333333" 
                android:gravity="center_vertical" 
                android:id="@+id/tv_basic_info" 
                android:paddingLeft="@dimen/margin_10" 
                android:layout_width="fill_parent" 
                android:layout_height="fill_parent" 
                android:text="@string/basic_info" />

        </RelativeLayout>
        
        <View
            style="@style/line_h" />
        
        
       <RelativeLayout
            android:id="@+id/layout_nationality"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/view_item_height"
            android:background="@drawable/selector_btn_4"
            android:clickable="true" >

            <TextView
                android:id="@+id/tv_nationality"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_10"
                android:textColor="@color/color_333333"
                android:text="@string/nationality"
                android:textSize="@dimen/font_size_26" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:src="@drawable/icon_right_arrow" />
        </RelativeLayout>
                
        <View android:layout_marginLeft="@dimen/margin_10" 
            style="@style/line_h" />
        
        <RelativeLayout
            android:id="@+id/layout_birth"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/view_item_height"
            android:background="@drawable/selector_btn_4"
            android:clickable="true" >

            <TextView
                android:id="@+id/tv_birth"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_10"
                android:textColor="@color/color_333333"
                android:text="@string/birth"
                android:textSize="@dimen/font_size_26" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:src="@drawable/icon_right_arrow" />
        </RelativeLayout>
                
        <View android:layout_marginLeft="@dimen/margin_10" 
            style="@style/line_h" />
        
         <RelativeLayout
            android:id="@+id/layout_gender"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/view_item_height"
            android:background="@drawable/selector_btn_4"
            android:clickable="true" >

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_10"
                android:textColor="@color/color_333333"
                android:text="@string/gender"
                android:textSize="@dimen/font_size_26" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:src="@drawable/icon_right_arrow" />
        </RelativeLayout>
        
                 <View 
            style="@style/line_h" />
    
	</LinearLayout>
	        

        
    <RelativeLayout 
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/layout_passenger_info"
        android:gravity="center_horizontal"
 		>
        <Button 
            android:id="@+id/btn_confirm"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/size_20dip"
            android:layout_width="@dimen/passengerlist_confirmbutton_width"
            android:layout_height="@dimen/passengerlist_confirmbutton_height"
            android:text="@string/done"
            android:background="@drawable/selector_btn_1"
            android:gravity="center"
            />
    </RelativeLayout>
    
    
    </RelativeLayout>
    

</ScrollView>
