<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_titlebar_height"
        android:background="@color/color_099fde"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="@dimen/common_titlebar_backicon_size"
            android:layout_height="@dimen/common_titlebar_backicon_size"
            android:layout_marginLeft="@dimen/common_titlebar_backicon_margin"
            android:layout_marginTop="@dimen/common_titlebar_backicon_margin"
            android:background="@drawable/btn_titlebar_back"
            android:clickable="true" />

        <LinearLayout
            android:id="@+id/title_mark_view"
            android:layout_width="@dimen/common_titlebar_markview_width"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dip"
            android:orientation="vertical" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical" >

            <LinearLayout
                android:id="@+id/title_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_titlebar_backicon_margin"
                android:layout_alignParentRight="true" 
                android:orientation="horizontal" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>