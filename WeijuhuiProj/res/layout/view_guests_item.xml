<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:orientation="vertical" 
    android:background="@color/color_ffffff" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <LinearLayout 
        android:gravity="center_vertical"
        android:orientation="horizontal" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:minHeight="60.0dip">
        
        <RelativeLayout 
            android:id="@+id/ll_check" 
            android:clickable="true" 
            android:layout_width="0.0dip" 
            android:layout_height="wrap_content" 
            android:layout_weight="1.0">
            
            <ImageView 
                android:id="@+id/iv_check" 
                android:duplicateParentState="true" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="@dimen/margin_10" 
                android:layout_marginRight="20.0dip" 
                android:src="@drawable/selector_icon_check" 
                android:layout_alignParentRight="true" 
                android:layout_centerVertical="true" />
            
            <LinearLayout 
                android:id="@+id/view_check_section"
                android:gravity="center_vertical" 
                android:orientation="vertical" 
                android:paddingTop="@dimen/margin_10"
                android:paddingBottom="@dimen/margin_10" 
                android:clickable="true"
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="@dimen/margin_10" 
                android:layout_toLeftOf="@id/iv_check" 
                android:layout_centerVertical="true">
                
                <TextView 
                    android:textSize="@dimen/font_size_large" 
                    android:textColor="@color/color_333333" 
                    android:ellipsize="end" 
                    android:id="@+id/tv_title" 
                    android:layout_width="fill_parent" 
                    android:layout_height="wrap_content" 
                    android:singleLine="true" />
                
                <TextView 
                    android:textSize="@dimen/font_size_small" 
                    android:textColor="@color/color_666666" 
                    android:ellipsize="end" 
                    android:id="@+id/tv_subtitle" 
                    android:layout_width="fill_parent" 
                    android:layout_height="wrap_content" 
                    android:singleLine="true" />
            </LinearLayout>
        </RelativeLayout>
        
        <LinearLayout 
            android:orientation="horizontal" 
            android:id="@+id/view_edit_container" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content">
            
            <View style="@style/line_v" />
            
            <ImageView 
                android:id="@+id/iv_edit" 
                android:clickable="true" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="20.0dip" 
                android:layout_marginRight="20.0dip" 
                android:src="@drawable/selector_icon_guest_edit" />
        </LinearLayout>
    </LinearLayout>
    <View style="@style/line_h" />
</LinearLayout>