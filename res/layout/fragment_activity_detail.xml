<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="38dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imageView_img"
        android:layout_width="128dip"
        android:layout_height="128dip"
        android:layout_alignLeft="@+id/textView_name"
        android:layout_below="@+id/textView_name"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:id="@+id/relativeLayout_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_img"
        android:layout_marginTop="18dp" >

        <ImageView
            android:id="@+id/imageView_address"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_marginLeft="4dp"
            android:src="@drawable/address" />

        <TextView
            android:id="@+id/textView_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imageView_address"
            android:text="TextView" />

        <ImageView
            android:id="@+id/imageView_address_next"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:src="@drawable/next" />

    </RelativeLayout>

        <RelativeLayout
        android:id="@+id/relativeLayout_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout_address"
        android:layout_marginTop="4dp" >

        <ImageView
            android:id="@+id/imageView_phone"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_marginLeft="4dp"
            android:src="@drawable/phone" />

        <TextView
            android:id="@+id/textView_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imageView_phone"
            android:text="TextView" />

        <ImageView
            android:id="@+id/imageView_phone_next"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:src="@drawable/next" />

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/relativeLayout_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout_phone"
        android:layout_marginTop="4dp" >

        <Button
            android:id="@+id/button_addFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/add_friends" />

        <TextView
            android:id="@+id/textView_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/button_addFriends"
            android:text="TextView" />

    </RelativeLayout>

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="@string/confirm_activity" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_confirm"
        android:layout_alignBottom="@+id/button_confirm"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/cancel" />

</RelativeLayout>